<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.bitcoin.tracker.walletx.activity.txCategories.TxCategoryUpdateActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/category_update_edit_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/gen_spacer_small"
        android:hint="@string/tx_categories_create_edittext_hint"
        android:singleLine="true"
        android:inputType="textCapWords" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tx_categories_update_button_text"
        android:id="@+id/category_update_button"
        android:layout_below="@+id/category_update_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/category_update_edit_text"
        android:layout_alignEnd="@+id/category_update_edit_text"
        android:layout_marginTop="@dimen/gen_spacer_small" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tx_categories_delete_button_text"
        android:id="@+id/category_delete_button"
        android:layout_below="@+id/category_update_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/category_update_button"
        android:layout_alignEnd="@+id/category_update_button"
        android:layout_marginTop="@dimen/gen_spacer_small" />
</RelativeLayout>
