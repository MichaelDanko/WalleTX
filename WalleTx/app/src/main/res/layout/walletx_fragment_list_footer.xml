<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/no_wallets_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <!-- TODO: Update blank fragment layout -->
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/walletx_add_first_wallet_l1"
                android:gravity="center"
                android:id="@+id/no_wallets_line1"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:paddingTop="@dimen/gen_spacer_large" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/walletx_add_first_wallet_l2"
                android:gravity="center"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal|top"
                android:layout_below="@+id/no_wallets_line1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_below="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@mipmap/ic_action_add_gray.png"
                android:paddingBottom="@dimen/gen_spacer_medium" />

        </RelativeLayout>

    </com.balysv.materialripple.MaterialRippleLayout>

</RelativeLayout>
