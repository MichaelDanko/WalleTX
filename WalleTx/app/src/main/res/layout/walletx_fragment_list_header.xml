<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:weightSum="1"
    android:gravity="center_vertical"
    android:background="@color/wtx_gray">

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/allWalletsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/allWalletsInfo"
                android:layout_toLeftOf="@+id/allWalletsBitcoinLogo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/walletx_main_label_all_wallets_aggreation"
                    android:id="@+id/allWalletsLabel"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/walletx_main_label_empty_bitcoin_balance"
                        android:id="@+id/textView3"
                        android:layout_below="@+id/allWalletsLabel"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/wtx_light_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/app_btc_currency_label"
                        android:id="@+id/btcLabel"
                        android:layout_alignTop="@+id/textView3"
                        android:layout_toRightOf="@+id/textView3"
                        android:layout_toEndOf="@+id/textView3"
                        android:layout_marginLeft="@dimen/gen_spacer_small"
                        android:textColor="@color/wtx_light_gray" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/walletx_main_label_empty_lc_balance"
                        android:id="@+id/textView4"
                        android:layout_below="@+id/textView3"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/btcLabel"
                        android:layout_toStartOf="@+id/btcLabel"
                        android:textColor="@color/wtx_light_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/app_lc_currency_label"
                        android:id="@+id/textView5"
                        android:layout_below="@+id/textView3"
                        android:layout_toRightOf="@+id/textView4"
                        android:layout_toEndOf="@+id/textView4"
                        android:layout_marginLeft="@dimen/gen_spacer_small"
                        android:textColor="@color/wtx_light_gray" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/allWalletsBitcoinLogo"
                android:src="@drawable/walletx_bitcoin_logo"
                android:layout_weight="0.17"
                android:adjustViewBounds="false"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:minWidth="68dp"
                android:minHeight="68dp" />

        </RelativeLayout>

    </com.balysv.materialripple.MaterialRippleLayout>

</RelativeLayout>
