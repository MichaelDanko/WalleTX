<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bitcoin.tracker.walletx.activity.walletx.create.WalletxCreateSingleAddressWalletFragment">

    <EditText
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPublicKey"
        android:layout_gravity="left|top"
        android:inputType="textCapWords"
        android:hint="@string/walletx_create_hint_public_key"
        android:paddingTop="@dimen/form_element_bottom_margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_toLeftOf="@+id/scanQrCode"
        android:layout_toStartOf="@+id/scanQrCode"
        android:layout_marginBottom="@dimen/form_element_bottom_margin" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scanQrCode"
        android:layout_gravity="right|top"
        android:src="@drawable/ic_action_barcode_2"
        android:minWidth="@dimen/minimum_size_barcode_button"
        android:scaleType="fitCenter"
        android:minHeight="@dimen/minimum_size_barcode_button"
        android:background="@null"
        android:paddingTop="@dimen/form_element_bottom_margin"
        android:cropToPadding="false"
        android:contentDescription="@string/walletx_create_content_description_barcode"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/form_element_bottom_margin" />

    <EditText
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextSaWalletName"
        android:hint="@string/walletx_create_hint_single_address_wallet_name"
        android:paddingTop="@dimen/form_element_bottom_margin"
        android:inputType="textCapWords"
        android:layout_gravity="center"
        android:layout_below="@+id/editTextPublicKey"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/scanQrCode"
        android:layout_alignEnd="@+id/scanQrCode"
        android:layout_marginBottom="@dimen/form_element_bottom_margin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/walletx_create_submit_button"
        android:id="@+id/submitButton"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_below="@+id/editTextSaWalletName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/scanQrCode"
        android:layout_alignEnd="@+id/scanQrCode"
        android:layout_marginBottom="@dimen/form_element_bottom_margin" />

</RelativeLayout>
