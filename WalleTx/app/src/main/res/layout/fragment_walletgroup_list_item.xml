<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for custom list items in the
 WalletGroup custom list view -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:id="@+id/groupNameLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/custom_wallet_group_list_item_label_default_group"
        android:id="@+id/defaultGroupLabel"
        android:textStyle="italic"
        android:paddingLeft="@dimen/custom_wallet_group_list_item_left_padding_default_group_label" />

</LinearLayout>
