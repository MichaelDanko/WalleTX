<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for custom list items in the
 WalletGroup custom list view -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center_vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:id="@+id/groupNameLabel"
            android:text="@string/hello_world"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/label_default_wallet_group"
            android:id="@+id/defaultGroupLabel"
            android:textStyle="italic"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/groupNameLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/imageButtonMoveUp"
        android:src="@drawable/wtx_pointer_up"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:maxWidth="22dp"
        android:scaleType="fitCenter"
        android:layout_marginRight="@dimen/custom_list_view_move_arrow_spacing" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/imageButtonMoveDown"
        android:src="@drawable/wtx_pointer_down"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:maxWidth="22dp"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:layout_marginLeft="@dimen/custom_list_view_move_arrow_spacing" />

</LinearLayout>
