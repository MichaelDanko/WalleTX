<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.bitcoin.tracker.walletx.activity.walletGroup.WalletGroupCreateActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextWalletGroupName"
        android:layout_gravity="center_horizontal|top"
        android:hint="@string/hint_wallet_group_name"
        android:paddingTop="@dimen/form_element_vertical_spacing"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/form_element_vertical_spacing"
        android:singleLine="true"
        android:inputType="textCapWords" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkbox_set_as_default"
        android:id="@+id/checkBoxSetAsDefault"
        android:layout_below="@+id/editTextWalletGroupName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editTextWalletGroupName"
        android:layout_alignEnd="@+id/editTextWalletGroupName"
        android:checked="false"
        android:layout_marginBottom="@dimen/form_element_vertical_spacing" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_edit_wallet_group"
        android:id="@+id/buttonUpdateWalletGroup"
        android:layout_below="@+id/checkBoxSetAsDefault"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/form_element_vertical_spacing" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_delete_wallet_group"
        android:id="@+id/buttonDeleteWalletGroup"
        android:layout_below="@+id/buttonUpdateWalletGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/form_element_vertical_spacing" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/label_delete_default_group_note"
        android:id="@+id/labelDefaultGroupCannotBeDeleted"
        android:layout_below="@+id/buttonDeleteWalletGroup"
        android:layout_centerHorizontal="true"
        android:textStyle="italic"
        android:textColor="#ffb4b4b4"
        android:gravity="center" />
</RelativeLayout>
